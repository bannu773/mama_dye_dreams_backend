# Server Configuration
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mama_dye_dreams

# AWS Cognito Configuration
AWS_REGION=ap-south-1
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=mama-dye-dreams-images
S3_REGION=ap-south-1

# AWS SES Configuration
SES_FROM_EMAIL=noreply@mamadyedreams.com
SES_REGION=ap-south-1
ADMIN_EMAIL=admin@mamadyedreams.com

# Razorpay Configuration
# Sign up at: https://dashboard.razorpay.com/signup
# Get test keys from: https://dashboard.razorpay.com/app/keys
# For testing: Use test keys (starts with rzp_test_)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxx

# For production: Use live keys (starts with rzp_live_)
# RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxx

# Session & Security
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_random_string_minimum_32_characters_long
JWT_SECRET=generate_random_string_minimum_32_characters_long
SESSION_COOKIE_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Email Templates
EMAIL_VERIFICATION_URL=http://localhost:8080/verify-email
PASSWORD_RESET_URL=http://localhost:8080/reset-password

# Free Shipping Threshold
FREE_SHIPPING_THRESHOLD=2000

# Tax Rate
TAX_RATE=18
